div.modal#contact-modal
    .modal-dialog(role="document")
        .modal-content
            .modal-header
                h3.modal-title Contact Us
            .modal-body
                form(name="form", method="POST")
                    input.form-control.form-control-ecu-accent(name="name", type="text", placeholder="Enter your name", required)
                    input.form-control.form-control-ecu-accent(name="email", type="email", placeholder="Enter your email", required)
                    input.form-control.form-control-ecu-accent(name="subject", type="text", placeholder="Enter your subject", required)
                    textarea.form-control.form-control-ecu-accent(name="body", placeholder="Enter message", required)
                    .modal-footer
                        button.btn.btn-ecu-accent(type="submit") Send
                        button.btn.btn-ecu-accent(type="button") Cancel
                    .g-recaptcha(data-sitekey="6LccKhUTAAAAAFW7jJVq2_3bch36LmKpThWQ-HDT'")